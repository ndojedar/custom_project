<odoo>
    <data>
      <record id="project_project_kpis_form" model="ir.ui.view">
        <field name="name">KPIs Project Form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="priority">30</field>
        <field name="arch" type="xml">
          <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='management_kpis']/group[1]" position="after">
            <hr style="border-top:3px dotted #e3e3e3;"/>
            <div class="row">
              <div class="col-lg-6">
                <h3>Engineering</h3>
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <td>Pending Prod.</td>
                        <td>
                          <t t-esc='pending_production'
                             t-options='{"widget": "monetary", "display_currency": currency}'></t>
                        </td>
                      </tr>  
                    </tbody>
                  </table>
              </div>
              <div class="col-lg-6">
                <h3>Soft. Standard</h3>
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <td>Pending Prod.</td>
                        <td>
                          <t t-esc='soft_standard_pending_production'
                             t-options='{"widget": "monetary", "display_currency": currency}'></t>
                        </td>
                      </tr>
                    </tbody>
                  </table>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <h3>Purchases</h3>
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td>Pending Prod.</td>
                      <td>
                        <t t-esc='purchase_pending_production'
                          t-options='{"widget": "monetary", "display_currency": currency}'></t>
                      </td>
                    </tr>
                    <tr>
                      <td>Expected Cost.</td>
                        <td>
                          <t t-esc='purchase_amount_estimated_cost'
                            t-options='{"widget": "monetary", "display_currency": currency}'></t>
                        </td>
                      </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-lg-6">
                <h3>Travel Expenses</h3>
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td>Pending Prod.</td>
                      <td>
                        <t t-esc='expenses_pending_production'
                          t-options='{"widget": "monetary", "display_currency": currency}'></t>
                        </td>
                      </tr>
                      <tr>
                        <td>Expected Cost</td>
                        <td>
                          <t t-esc='expenses_amount_estimated_cost'
                            t-options='{"widget": "monetary", "display_currency": currency}'></t>
                        </td>
                      </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <hr style="border-top:3px dotted #e3e3e3;"/>    
          </xpath>
        </field>
      </record>
    </data>
</odoo>